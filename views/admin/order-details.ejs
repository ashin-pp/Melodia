        cancelButtonColor: '#6c757d',
        confirmButtonText: 'Update Order Status',
        cancelButtonText: 'Cancel',
        customClass: {
          container: 'swal2-top-z-index'
        },
        preConfirm: () => {
          const status = document.getElementById('swal-order-status').value;
          const reason = document.getElementById('swal-order-reason').value;

