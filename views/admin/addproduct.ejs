    }

    .sidebar nav li {
      margin: 5px 0;
    }

    .sidebar nav a {
      display: flex;
      align-items: center;
      padding: 12px 20px;
      text-decoration: none;
      color: #6c757d;
      font-size: 14px;
      transition: all 0.3s ease;
