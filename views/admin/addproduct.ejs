    }

    .image-counter {
      font-size: 14px;
      color: #6c757d;
      margin: 10px 0;
    }

    .image-previews {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
      gap: 15px;
      margin-top: 20px;
    }

    .image-preview-item {
      position: relative;
      border-radius: 8px;
      overflow: hidden;
      border: 1px solid #e9ecef;
    }

    .image-preview-item img {
      width: 100%;
      height: 120px;
      object-fit: cover;
    }

    .remove-image-btn {
