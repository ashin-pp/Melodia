      background-color: #000;
      color: white;
    }

    .sidebar nav a i {
      margin-right: 10px;
      width: 16px;
    }

    /* Products Content */
    .products-content {
      flex: 1;
      padding: 30px;
      background-color: #fff;
    }

    .page-header {
      margin-bottom: 30px;
      display: flex;
      justify-content: space-between;
