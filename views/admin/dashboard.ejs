    <script>
        let salesChart = null;
        let ordersChart = null;

        // Initialize dashboard
        document.addEventListener('DOMContentLoaded', function () {
            initializeDashboard();

            // Load initial chart data if available
            <% if (typeof initialChartData !== 'undefined' && initialChartData) { %>
                const initialData = <%- JSON.stringify(initialChartData) %>;
                updateDashboard(initialData);
            <% } else { %>
                // Load dashboard data via API (no success message on initial load)
                loadDashboardData(false);
            <% } %>
        });

        function initializeDashboard() {
            console.log('Initializing dashboard...');
            
            // Get all filter elements
            const periodSelect = document.getElementById('periodSelect');
            const yearSelect = document.getElementById('yearSelect');
            const monthSelect = document.getElementById('monthSelect');
            const applyFiltersBtn = document.getElementById('applyFilters');
            
            // Check if all elements exist
            if (!periodSelect || !yearSelect || !monthSelect || !applyFiltersBtn) {
                console.error('Filter elements missing:', {
                    periodSelect: !!periodSelect,
                    yearSelect: !!yearSelect,
                    monthSelect: !!monthSelect,
                    applyFiltersBtn: !!applyFiltersBtn
                });
                return;
            }

            // Set current date as default
            const currentDate = new Date();
            yearSelect.value = currentDate.getFullYear();
            monthSelect.value = currentDate.getMonth();
            
            console.log('Set default values:', {
                year: yearSelect.value,
                month: monthSelect.value,
                period: periodSelect.value
            });

            // Apply filters button - MAIN TRIGGER
            applyFiltersBtn.addEventListener('click', function(e) {
                e.preventDefault();
                loadDashboardData(true);
            });

            // Period change handler - show/hide other filters
            periodSelect.addEventListener('change', function() {
                const period = this.value;
                
                // Get parent divs of year and month selects
                const yearGroup = yearSelect.parentElement;
                const monthGroup = monthSelect.parentElement;

                // Show/hide based on period
                switch(period) {
                    case 'monthly':
                        yearGroup.style.display = 'flex';
                        monthGroup.style.display = 'flex';
                        break;
                    case 'yearly':
                        yearGroup.style.display = 'flex';
                        monthGroup.style.display = 'none';
                        break;
                    case 'daily':
                    case 'weekly':
                    default:
                        yearGroup.style.display = 'none';
                        monthGroup.style.display = 'none';
                        break;
                }
                
                // Auto-apply when period changes
                loadDashboardData(false);
            });

            // Year and month change handlers
            yearSelect.addEventListener('change', function() {
                loadDashboardData(false);
            });
            
            monthSelect.addEventListener('change', function() {
                loadDashboardData(false);
            });

            // Ledger generation
            const ledgerBtn = document.getElementById('generateLedgerPDF');
            if (ledgerBtn) {
                ledgerBtn.addEventListener('click', generateLedgerPDF);
            }

            // Set default dates for ledger
            const today = new Date();
            const thirtyDaysAgo = new Date();
            thirtyDaysAgo.setDate(today.getDate() - 30);

            const ledgerStartDate = document.getElementById('ledgerStartDate');
            const ledgerEndDate = document.getElementById('ledgerEndDate');
            
            if (ledgerStartDate) ledgerStartDate.value = thirtyDaysAgo.toISOString().split('T')[0];
            if (ledgerEndDate) ledgerEndDate.value = today.toISOString().split('T')[0];

            // Initialize filter visibility
            periodSelect.dispatchEvent(new Event('change'));
            
            // Dashboard initialization complete
        }


        async function loadDashboardData(showMessage = false) {
            // Get filter values
            const period = document.getElementById('periodSelect')?.value || 'monthly';
            const year = document.getElementById('yearSelect')?.value || new Date().getFullYear();
            const month = document.getElementById('monthSelect')?.value || new Date().getMonth();

            try {
                // Build API URL with parameters
                const params = new URLSearchParams();
                params.append('period', period);
                
                // Add year and month based on period
                if (period === 'monthly') {
                    params.append('year', year);
                    params.append('month', month);
                } else if (period === 'yearly') {
                    params.append('year', year);
                }
                
                const apiUrl = `/admin/api/dashboard?${params.toString()}`;

                // Show loading
                showLoadingState();

                // Make API call
                const response = await fetch(apiUrl, {
                    method: 'GET',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    credentials: 'same-origin'
                });

                if (!response.ok) {
                    throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                }

                const result = await response.json();

                if (result.success && result.data) {
                    updateDashboard(result.data);
                } else {
                    throw new Error(result.message || 'Invalid response format');
                }

            } catch (error) {
                showErrorState(`Failed to load data: ${error.message}`);
            } finally {
                hideLoadingState();
            }
        }

        function showLoadingState() {
            // Add loading indicators to charts
            const salesChart = document.getElementById('salesChart');
            const ordersChart = document.getElementById('ordersChart');
            const applyBtn = document.getElementById('applyFilters');

            if (salesChart) {
                salesChart.style.opacity = '0.5';
            }
            if (ordersChart) {
                ordersChart.style.opacity = '0.5';
            }
            if (applyBtn) {
                applyBtn.textContent = 'Loading...';
                applyBtn.disabled = true;
            }

            // Add loading overlay to stats cards
            const statsCards = document.querySelectorAll('.stat-card');
            statsCards.forEach(card => {
                card.style.opacity = '0.7';
            });
        }

        function hideLoadingState() {
            const salesChart = document.getElementById('salesChart');
            const ordersChart = document.getElementById('ordersChart');
            const applyBtn = document.getElementById('applyFilters');

            if (salesChart) {
                salesChart.style.opacity = '1';
            }
            if (ordersChart) {
                ordersChart.style.opacity = '1';
            }
            if (applyBtn) {
                applyBtn.textContent = 'Apply Filters';
                applyBtn.disabled = false;
            }

            // Remove loading overlay from stats cards
            const statsCards = document.querySelectorAll('.stat-card');
            statsCards.forEach(card => {
                card.style.opacity = '1';
            });
        }

        function showErrorState(message) {
            // Show error message to user
            const errorDiv = document.createElement('div');
            errorDiv.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                background: #dc3545;
                color: white;
                padding: 15px;
                border-radius: 5px;
                z-index: 1000;
                max-width: 300px;
            `;
            errorDiv.textContent = `Error: ${message}`;
            document.body.appendChild(errorDiv);
            
            // Remove after 5 seconds
            setTimeout(() => {
                if (errorDiv.parentNode) {
                    errorDiv.parentNode.removeChild(errorDiv);
                }
            }, 5000);
        }
        
        function showSuccessMessage(message) {
            // Removed success message notifications
        }

        function updateDashboard(data) {
            // Show data type indicator
            showDataTypeIndicator(data);
            
            // Update stats cards with filtered data
            if (data && data.summary) {
                const summary = data.summary;
                
                // Update Total Sales
                const totalSalesEl = document.getElementById('totalSalesValue');
                if (totalSalesEl) {
                    const salesValue = summary.totalRevenue || 0;
                    totalSalesEl.textContent = `₹${salesValue.toLocaleString()}`;
                }

                // Update Delivered Orders
                const deliveredOrdersEl = document.getElementById('visitorsValue');
                if (deliveredOrdersEl) {
                    const deliveredValue = summary.deliveredOrders || 0;
                    deliveredOrdersEl.textContent = deliveredValue.toLocaleString();
                }

                // Update Total Orders
                const totalOrdersEl = document.getElementById('totalOrdersValue');
                if (totalOrdersEl) {
                    const ordersValue = summary.totalOrders || 0;
                    totalOrdersEl.textContent = ordersValue.toLocaleString();
                }
            }

            // Update charts with filtered data
            const chartData = data.chartData || [];
            updateSalesChart(chartData);
            updateOrdersChart(chartData);
        }

        function showDataTypeIndicator(data) {
            // Removed all notification indicators
            // No more popup messages will be shown
        }

        function updateSalesChart(chartData) {
            const ctx = document.getElementById('salesChart').getContext('2d');

            // Destroy existing chart
            if (salesChart) {
                salesChart.destroy();
            }

            // Get current period for proper labeling
            const period = document.getElementById('periodSelect')?.value || 'monthly';
            
            // Use real data or fallback to sample data
            let labels, salesData;

            if (chartData && chartData.length > 0) {
                // Real data from API - format labels based on period
                labels = chartData.map(item => {
                    if (period === 'daily') {
                        // For daily: show date like "Nov 1", "Nov 2"
                        const dateParts = item.date.split('-');
                        const date = new Date(dateParts[0], dateParts[1] - 1, dateParts[2]);
                        return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
                    } else if (period === 'weekly') {
                        // For weekly: show "Week 45", "Week 46"
                        return item.date.includes('W') ? item.date.replace('-W', ' W') : `Week ${item.date}`;
                    } else if (period === 'monthly') {
                        // For monthly: show "Jan", "Feb", "Mar"
                        const dateParts = item.date.split('-');
                        const date = new Date(dateParts[0], dateParts[1] - 1, 1);
                        return date.toLocaleDateString('en-US', { month: 'short' });
                    } else if (period === 'yearly') {
                        // For yearly: show "2021", "2022", "2023"
                        return item.date;
                    }
                    return item.date;
                });
                salesData = chartData.map(item => item.sales || 0);
            } else {
                // Minimal fallback - should not be used if backend is working properly
                labels = ['No Data'];
                salesData = [0];
            }

            // Create sales chart (line chart)
            salesChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Sales Amount',
                        data: salesData,
                        borderColor: '#007bff',
                        backgroundColor: 'rgba(0, 123, 255, 0.1)',
                        tension: 0.4,
                        fill: true,
                        pointBackgroundColor: '#007bff',
                        pointBorderColor: '#007bff',
                        pointRadius: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        x: {
                            grid: {
                                display: false
                            }
                        },
                        y: {
                            beginAtZero: true,
                            grid: {
                                color: '#f0f0f0'
                            },
                            ticks: {
                                callback: function (value) {
                                    if (value >= 1000) {
                                        return '₹' + (value / 1000) + 'K';
                                    }
                                    return '₹' + value;
                                }
                            }
                        }
                    }
                }
            });
        }

        function updateOrdersChart(chartData) {
            const ctx = document.getElementById('ordersChart').getContext('2d');

            // Destroy existing chart
            if (ordersChart) {
                ordersChart.destroy();
            }

            // Get current period for proper labeling
            const period = document.getElementById('periodSelect')?.value || 'monthly';
            
            // Use real data or fallback to sample data
            let labels, ordersData, maxValue;

            if (chartData && chartData.length > 0) {
                // Real data from API - format labels based on period (same as sales chart)
                labels = chartData.map(item => {
                    if (period === 'daily') {
                        const dateParts = item.date.split('-');
                        const date = new Date(dateParts[0], dateParts[1] - 1, dateParts[2]);
                        return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
                    } else if (period === 'weekly') {
                        return item.date.includes('W') ? item.date.replace('-W', ' W') : `Week ${item.date}`;
                    } else if (period === 'monthly') {
                        const dateParts = item.date.split('-');
                        const date = new Date(dateParts[0], dateParts[1] - 1, 1);
                        return date.toLocaleDateString('en-US', { month: 'short' });
                    } else if (period === 'yearly') {
                        return item.date;
                    }
                    return item.date;
                });
                ordersData = chartData.map(item => item.orders || 0);
                maxValue = Math.max(...ordersData) + 2; // Add some padding
            } else {
                // Minimal fallback - should not be used if backend is working properly
                labels = ['No Data'];
                ordersData = [0];
                maxValue = 1;
            }

            // Create orders chart (bar chart)
            ordersChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Orders Count',
                        data: ordersData,
                        backgroundColor: '#28a745',
                        borderRadius: 4,
                        barThickness: 20
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        x: {
                            grid: {
                                display: false
                            }
                        },
                        y: {
                            beginAtZero: true,
                            max: maxValue,
                            grid: {
                                color: '#f0f0f0'
                            },
                            ticks: {
                                stepSize: 1
                            }
                        }
                    }
                }
            });
        }

        // Generate Ledger PDF
        function generateLedgerPDF() {
            const startDate = document.getElementById('ledgerStartDate').value;
            const endDate = document.getElementById('ledgerEndDate').value;

            if (!startDate || !endDate) {
                alert('Please select both start and end dates');
                return;
            }

            if (new Date(startDate) > new Date(endDate)) {
                alert('Start date cannot be later than end date');
                return;
            }

            // Show loading state
            const btn = document.getElementById('generateLedgerPDF');
            const originalText = btn.innerHTML;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Generating...';
            btn.disabled = true;

            // Build download URL
            const params = new URLSearchParams({
                startDate: startDate,
                endDate: endDate,
                type: 'ledger'
            });

            const url = `/admin/api/ledger-pdf?${params}`;

            // Create temporary link and click it
            const link = document.createElement('a');
            link.href = url;
            link.download = `ledger-book-${startDate}-to-${endDate}.pdf`;
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);

            // Reset button after 2 seconds
            setTimeout(() => {
                btn.innerHTML = originalText;
                btn.disabled = false;
            }, 2000);
        }
    </script>


