                    <span class="nav-text">Products</span>
                </a>
                <a href="/admin/orders" class="nav-item <%= (typeof currentPage !== 'undefined' && currentPage === 'orders') ? 'active' : '' %>">
                    <i class="nav-icon fas fa-list"></i>
                    <span class="nav-text">Order Management</span>
                </a>
