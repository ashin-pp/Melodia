                <!-- <a href="/admin/inventory" class="nav-item <%= (typeof currentPage !== 'undefined' && currentPage === 'inventory') ? 'active' : '' %>">
                    <i class="nav-icon fas fa-boxes"></i>
                    <span class="nav-text">Inventory</span>
                </a> -->
                <a href="/admin/customer" class="nav-item <%= (typeof currentPage !== 'undefined' && currentPage === 'customers') ? 'active' : '' %>">
                    <i class="nav-icon fas fa-users"></i>
                    <span class="nav-text">Users</span>
                </a>
                <a href="/admin/sales-report" class="nav-item <%= (typeof currentPage !== 'undefined' && currentPage === 'sales') ? 'active' : '' %>">
                    <i class="nav-icon fas fa-chart-bar"></i>
                    <span class="nav-text">Sales Report</span>
                </a>
                <a href="/admin/coupons" class="nav-item <%= (typeof currentPage !== 'undefined' && currentPage === 'coupons') ? 'active' : '' %>">
                    <i class="nav-icon fas fa-tags"></i>
                    <span class="nav-text">Coupons</span>
                </a>
                <a href="/admin/category" class="nav-item <%= (typeof currentPage !== 'undefined' && currentPage === 'categories') ? 'active' : '' %>">
                    <i class="nav-icon fas fa-folder"></i>
                    <span class="nav-text">Category</span>
                </a>
                <a href="/admin/banners" class="nav-item <%= (typeof currentPage !== 'undefined' && currentPage === 'banners') ? 'active' : '' %>">
                    <i class="nav-icon fas fa-flag"></i>
                    <span class="nav-text">Banners</span>
                </a>
                <a href="/admin/settings" class="nav-item <%= (typeof currentPage !== 'undefined' && currentPage === 'settings') ? 'active' : '' %>">
                    <i class="nav-icon fas fa-cog"></i>
                    <span class="nav-text">Settings</span>
                </a>
            </nav>
        </div>

        <!-- Overlay for mobile -->
        <div class="overlay" id="overlay" onclick="toggleSidebar()"></div>

        <!-- Main Content -->
        <div class="main-content">
            <div class="content-wrapper">
