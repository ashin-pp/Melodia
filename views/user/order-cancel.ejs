<%- include('../partials/header-common', { title: 'Cancel Order - Melodia' }) %>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Inter', sans-serif;
        background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        min-height: 100vh;
        padding-top: 80px;
    }

    .cancel-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .cancel-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        margin-bottom: 2rem;
    }

    .cancel-header {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        color: white;
        padding: 2rem;
        text-align: center;
    }

    .cancel-icon {
        width: 80px;
        height: 80px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem;
        animation: pulse 2s infinite;
    }

    .cancel-icon i {
        font-size: 40px;
    }

    @keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
    }

    .cancel-title {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .cancel-subtitle {
        font-size: 1.1rem;
        opacity: 0.9;
    }

    .cancel-content {
        padding: 2rem;
    }

    .order-summary {
        background: #f8fafc;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        border: 1px solid #e2e8f0;
    }

    .summary-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #1e293b;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .summary-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.75rem 0;
        border-bottom: 1px solid #e2e8f0;
    }

    .summary-row:last-child {
        border-bottom: none;
        font-weight: 600;
        color: #1e293b;
    }

    .summary-label {
        color: #64748b;
    }

    .summary-value {
        color: #1e293b;
        font-weight: 500;
    }

    .cancel-form {
        background: #fff;
        border: 1px solid #e2e8f0;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 2rem;
    }

    .form-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #1e293b;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        display: block;
        font-weight: 500;
        color: #374151;
        margin-bottom: 0.5rem;
    }

    .form-select {
        width: 100%;
        padding: 0.75rem;
        border: 1px solid #d1d5db;
        border-radius: 8px;
        font-size: 1rem;
        background: white;
        transition: border-color 0.2s;
    }

    .form-select:focus {
        outline: none;
        border-color: #3b82f6;
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }

    .form-textarea {
        width: 100%;
        padding: 0.75rem;
        border: 1px solid #d1d5db;
        border-radius: 8px;
        font-size: 1rem;
        resize: vertical;
        min-height: 100px;
        font-family: inherit;
        transition: border-color 0.2s;
    }

    .form-textarea:focus {
        outline: none;
        border-color: #3b82f6;
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }

    .refund-info {
        background: #f0f9ff;
        border: 1px solid #bae6fd;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 2rem;
    }

    .refund-title {
        font-weight: 600;
        color: #0369a1;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .refund-details {
        color: #0c4a6e;
        line-height: 1.6;
    }

    .refund-timeline {
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid #bae6fd;
    }

    .timeline-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 0.5rem;
        font-size: 0.875rem;
        color: #0c4a6e;
    }

    .timeline-icon {
        width: 20px;
        height: 20px;
        background: #0369a1;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 10px;
        flex-shrink: 0;
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn {
        padding: 0.875rem 2rem;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        border: none;
        cursor: pointer;
        min-width: 150px;
        justify-content: center;
    }

    .btn-danger {
        background: linear-gradient(135deg, #ef4444, #dc2626);
        color: white;
    }

    .btn-danger:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(239, 68, 68, 0.3);
        color: white;
        text-decoration: none;
    }

    .btn-secondary {
        background: #f3f4f6;
        color: #374151;
        border: 2px solid #e5e7eb;
    }

    .btn-secondary:hover {
        background: #e5e7eb;
        transform: translateY(-2px);
        color: #374151;
        text-decoration: none;
    }

    .warning-box {
        background: #fef3c7;
        border: 1px solid #f59e0b;
        border-radius: 12px;
        padding: 1rem;
        margin-bottom: 2rem;
        display: flex;
        align-items: flex-start;
        gap: 0.75rem;
    }

    .warning-icon {
        color: #d97706;
        font-size: 1.25rem;
        margin-top: 0.125rem;
        flex-shrink: 0;
    }

    .warning-content {
        color: #92400e;
        line-height: 1.5;
    }

    .warning-title {
        font-weight: 600;
        margin-bottom: 0.25rem;
    }

    @media (max-width: 768px) {
        .cancel-container {
            margin: 1rem auto;
            padding: 0 0.5rem;
        }

        .cancel-content {
            padding: 1.5rem;
        }

        .cancel-title {
            font-size: 1.75rem;
        }

        .action-buttons {
            flex-direction: column;
        }

        .btn {
            width: 100%;
        }

        .summary-row {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.25rem;
        }
    }
</style>

<div class="cancel-container">
    <div class="cancel-card">
        <div class="cancel-header">
            <div class="cancel-icon">
                <i class="fas fa-times-circle"></i>
            </div>
            <h1 class="cancel-title">Cancel Order</h1>
            <p class="cancel-subtitle">We're sorry to see you cancel your order</p>
        </div>

        <div class="cancel-content">
            <% if (order) { %>
            <!-- Order Summary -->
            <div class="order-summary">
                <h3 class="summary-title">
                    <i class="fas fa-receipt"></i>
                    Order Summary
                </h3>
                <div class="summary-row">
                    <span class="summary-label">Order ID:</span>
                    <span class="summary-value">#<%= order.orderId %></span>
                </div>
                <div class="summary-row">
                    <span class="summary-label">Order Date:</span>
                    <span class="summary-value"><%= new Date(order.createdAt).toLocaleDateString('en-IN', { 
                        year: 'numeric', 
                        month: 'long', 
                        day: 'numeric' 
                    }) %></span>
                </div>
                <div class="summary-row">
                    <span class="summary-label">Items:</span>
                    <span class="summary-value"><%= order.items.length %> item(s)</span>
                </div>
                <div class="summary-row">
                    <span class="summary-label">Payment Method:</span>
                    <span class="summary-value"><%= order.paymentMethod %></span>
                </div>
                <div class="summary-row">
                    <span class="summary-label">Total Amount:</span>
                    <span class="summary-value">â‚¹<%= order.totalAmount.toLocaleString() %></span>
                </div>
            </div>

            <!-- Warning Box -->
            <div class="warning-box">
                <i class="fas fa-exclamation-triangle warning-icon"></i>
                <div class="warning-content">
                    <div class="warning-title">Important Notice</div>
                    <p>Once you cancel this order, it cannot be undone. Please make sure you want to proceed with the cancellation.</p>
                </div>
            </div>

            <!-- Cancellation Form -->
            <form id="cancelForm" class="cancel-form">
                <h3 class="form-title">
                    <i class="fas fa-comment-alt"></i>
                    Cancellation Details
                </h3>
                
                <div class="form-group">
                    <label for="cancelReason" class="form-label">Reason for Cancellation *</label>
                    <select id="cancelReason" name="reason" class="form-select" required>
                        <option value="">Select a reason</option>
                        <option value="Changed my mind">Changed my mind</option>
                        <option value="Found better price elsewhere">Found better price elsewhere</option>
                        <option value="Ordered by mistake">Ordered by mistake</option>
                        <option value="Delivery taking too long">Delivery taking too long</option>
                        <option value="Payment issues">Payment issues</option>
                        <option value="Product no longer needed">Product no longer needed</option>
                        <option value="Other">Other</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="additionalComments" class="form-label">Additional Comments (Optional)</label>
                    <textarea id="additionalComments" name="comments" class="form-textarea" 
                              placeholder="Please provide any additional details about your cancellation..."></textarea>
                </div>
            </form>

            <!-- Refund Information -->
            <div class="refund-info">
                <h3 class="refund-title">
                    <i class="fas fa-money-bill-wave"></i>
                    Refund Information
                </h3>
                <div class="refund-details">
                    <% if (order.paymentMethod === 'COD') { %>
                    <p><strong>Cash on Delivery:</strong> Since this is a COD order, no refund processing is required. Your order will simply be cancelled.</p>
                    <% } else if (order.paymentMethod === 'wallet') { %>
                    <p><strong>Wallet Payment:</strong> The amount will be refunded to your wallet immediately after cancellation.</p>
                    <% } else { %>
                    <p><strong>Online Payment:</strong> Your refund will be processed back to your original payment method.</p>
                    <div class="refund-timeline">
                        <div class="timeline-item">
                            <div class="timeline-icon">1</div>
                            <span>Cancellation processed immediately</span>
                        </div>
                        <div class="timeline-item">
                            <div class="timeline-icon">2</div>
                            <span>Refund initiated within 24 hours</span>
                        </div>
                        <div class="timeline-item">
                            <div class="timeline-icon">3</div>
                            <span>Amount credited in 3-7 business days</span>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="action-buttons">
                <button type="button" onclick="confirmCancellation()" class="btn btn-danger">
                    <i class="fas fa-times-circle"></i>
                    Cancel Order
                </button>
                <a href="/orders/<%= order.orderId %>" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i>
                    Go Back
                </a>
            </div>
            <% } else { %>
            <!-- No Order Found -->
            <div style="text-align: center; padding: 2rem;">
                <i class="fas fa-exclamation-circle" style="font-size: 4rem; color: #ef4444; margin-bottom: 1rem;"></i>
                <h2 style="color: #1e293b; margin-bottom: 1rem;">Order Not Found</h2>
                <p style="color: #64748b; margin-bottom: 2rem;">The order you're trying to cancel could not be found or may have already been processed.</p>
                <a href="/orders" class="btn btn-secondary">
                    <i class="fas fa-list"></i>
                    View All Orders
                </a>
            </div>
            <% } %>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function confirmCancellation() {
        const reason = document.getElementById('cancelReason').value;
        const comments = document.getElementById('additionalComments').value;

        if (!reason) {
            Swal.fire({
                title: 'Missing Information',
                text: 'Please select a reason for cancellation.',
                icon: 'warning',
                confirmButtonColor: '#ef4444'
            });
            return;
        }

        Swal.fire({
            title: 'Confirm Cancellation',
            text: 'Are you sure you want to cancel this order? This action cannot be undone.',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#ef4444',
            cancelButtonColor: '#6b7280',
            confirmButtonText: 'Yes, Cancel Order',
            cancelButtonText: 'Keep Order'
        }).then((result) => {
            if (result.isConfirmed) {
                cancelOrder(reason, comments);
            }
        });
    }

    function cancelOrder(reason, comments) {
        const orderId = '<%= order ? order.orderId : "" %>';
        
        // Show loading
        Swal.fire({
            title: 'Processing Cancellation...',
            text: 'Please wait while we cancel your order.',
            allowOutsideClick: false,
            allowEscapeKey: false,
            showConfirmButton: false,
            didOpen: () => {
                Swal.showLoading();
            }
        });

        // Make API call to cancel order
        fetch(`/orders/${orderId}/cancel`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                reason: reason,
                comments: comments
            })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                Swal.fire({
                    title: 'Order Cancelled Successfully!',
                    text: data.message || 'Your order has been cancelled and refund will be processed if applicable.',
                    icon: 'success',
                    confirmButtonColor: '#10b981',
                    confirmButtonText: 'View Orders'
                }).then(() => {
                    window.location.href = '/orders';
                });
            } else {
                Swal.fire({
                    title: 'Cancellation Failed',
                    text: data.message || 'Unable to cancel the order. Please try again or contact support.',
                    icon: 'error',
                    confirmButtonColor: '#ef4444'
                });
            }
        })
        .catch(error => {
            console.error('Error:', error);
            Swal.fire({
                title: 'Error',
                text: 'An error occurred while cancelling the order. Please try again.',
                icon: 'error',
                confirmButtonColor: '#ef4444'
            });
        });
    }

    // Auto-focus on reason select
    document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('cancelReason').focus();
    });
</script>

</body>
</html>