<%- include('../partials/header-common', { title: 'Payment Cancelled - Melodia' }) %>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Inter', sans-serif;
        background-color: #f8f9fa;
        min-height: 100vh;
        padding: 40px 20px;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        border: 1px solid #e9ecef;
    }

    .header {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        color: white;
        padding: 40px 30px;
        text-align: center;
        position: relative;
    }

    .header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="white" opacity="0.1"/><circle cx="75" cy="75" r="1" fill="white" opacity="0.1"/><circle cx="50" cy="10" r="0.5" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
        opacity: 0.1;
    }

    .header-icon {
        width: 80px;
        height: 80px;
        background: rgba(255, 255, 255, 0.15);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        border: 3px solid rgba(255, 255, 255, 0.2);
        position: relative;
        z-index: 1;
    }

    .header-icon i {
        font-size: 36px;
        color: white;
    }

    .header h1 {
        font-size: 32px;
        font-weight: 700;
        margin-bottom: 12px;
        position: relative;
        z-index: 1;
    }

    .header p {
        font-size: 16px;
        opacity: 0.95;
        line-height: 1.5;
        position: relative;
        z-index: 1;
        max-width: 500px;
        margin: 0 auto;
    }

    .content {
        padding: 40px 30px;
    }

    .alert {
        background: #fff3cd;
        border: 1px solid #ffeaa7;
        border-left: 4px solid #f39c12;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 30px;
        display: flex;
        align-items: flex-start;
        gap: 12px;
    }

    .alert-icon {
        color: #856404;
        font-size: 20px;
        margin-top: 2px;
    }

    .alert-content {
        flex: 1;
    }

    .alert-title {
        font-weight: 600;
        color: #856404;
        margin-bottom: 8px;
        font-size: 16px;
    }

    .alert-text {
        color: #856404;
        font-size: 14px;
        line-height: 1.5;
    }

    .order-summary {
        background: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 10px;
        padding: 30px;
        margin-bottom: 30px;
    }

    .order-summary h3 {
        color: #495057;
        font-size: 20px;
        font-weight: 600;
        margin-bottom: 24px;
        padding-bottom: 12px;
        border-bottom: 2px solid #e9ecef;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .order-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 16px 0;
        border-bottom: 1px solid #e9ecef;
    }

    .order-row:last-child {
        border-bottom: none;
        font-weight: 600;
        color: #495057;
        background: #f8f9fa;
        margin: 16px -30px -30px;
        padding: 20px 30px;
        border-radius: 0 0 10px 10px;
    }

    .order-label {
        color: #6c757d;
        font-weight: 500;
        font-size: 15px;
    }

    .order-value {
        color: #495057;
        font-weight: 600;
        font-size: 15px;
    }

    .status-badge {
        background: #ffc107;
        color: #212529;
        padding: 8px 16px;
        border-radius: 25px;
        font-size: 12px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        box-shadow: 0 2px 4px rgba(255, 193, 7, 0.3);
    }

    .action-section {
        text-align: center;
        margin: 40px 0;
    }

    .btn-group {
        display: flex;
        gap: 16px;
        justify-content: center;
        flex-wrap: wrap;
        margin-bottom: 30px;
    }

    .btn {
        padding: 14px 28px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        font-size: 16px;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        border: none;
        cursor: pointer;
        min-width: 180px;
        justify-content: center;
        position: relative;
        overflow: hidden;
    }

    .btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        transition: left 0.5s;
    }

    .btn:hover::before {
        left: 100%;
    }

    .btn-primary {
        background: linear-gradient(135deg, #007bff, #0056b3);
        color: white;
        border: 2px solid transparent;
        box-shadow: 0 4px 15px rgba(0, 123, 255, 0.3);
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #0056b3, #004085);
        color: white;
        text-decoration: none;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0, 123, 255, 0.4);
    }

    .btn-secondary {
        background: #6c757d;
        color: white;
        border: 2px solid #6c757d;
    }

    .btn-secondary:hover {
        background: #545b62;
        border-color: #545b62;
        color: white;
        text-decoration: none;
        transform: translateY(-2px);
    }

    .btn-success {
        background: linear-gradient(135deg, #28a745, #1e7e34);
        color: white;
        border: 2px solid transparent;
        box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
    }

    .btn-success:hover {
        background: linear-gradient(135deg, #1e7e34, #155724);
        color: white;
        text-decoration: none;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(40, 167, 69, 0.4);
    }

    .btn-outline {
        background: transparent;
        color: #007bff;
        border: 2px solid #007bff;
    }

    .btn-outline:hover {
        background: #007bff;
        color: white;
        text-decoration: none;
        transform: translateY(-2px);
    }

    .divider {
        height: 1px;
        background: linear-gradient(90deg, transparent, #dee2e6, transparent);
        margin: 30px 0;
    }

    .help-box {
        background: linear-gradient(135deg, #e7f3ff, #f0f8ff);
        border: 1px solid #b8daff;
        border-left: 4px solid #007bff;
        border-radius: 10px;
        padding: 25px;
        margin-top: 30px;
    }

    .help-title {
        font-weight: 600;
        color: #004085;
        margin-bottom: 16px;
        font-size: 18px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .help-content {
        color: #004085;
        font-size: 14px;
        line-height: 1.7;
    }

    .help-list {
        margin: 16px 0;
        padding-left: 20px;
    }

    .help-list li {
        margin-bottom: 8px;
        position: relative;
    }

    .help-list li::marker {
        color: #007bff;
    }

    .footer-note {
        text-align: center;
        color: #6c757d;
        font-size: 14px;
        padding: 25px;
        background: #f8f9fa;
        border-top: 1px solid #dee2e6;
        margin-top: 30px;
    }

    .footer-note strong {
        color: #495057;
    }

    @media (max-width: 768px) {
        .container {
            margin: 0 10px;
        }
        
        .header {
            padding: 30px 20px;
        }
        
        .header h1 {
            font-size: 26px;
        }
        
        .content {
            padding: 30px 20px;
        }
        
        .btn-group {
            flex-direction: column;
            align-items: center;
        }
        
        .btn {
            width: 100%;
            max-width: 300px;
        }

        .order-row {
            flex-direction: column;
            align-items: flex-start;
            gap: 8px;
        }

        .order-summary {
            padding: 20px;
        }

        .order-row:last-child {
            margin: 16px -20px -20px;
            padding: 20px;
        }
    }

    /* Loading animation */
    @keyframes pulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.7; }
    }

    .loading {
        animation: pulse 1.5s ease-in-out infinite;
    }
</style>

<body>
    <div class="container">
        <!-- Header Section -->
        <div class="header">
            <div class="header-icon">
                <i class="fas fa-times-circle"></i>
            </div>
            <h1>Payment Cancelled</h1>
            <p>Your payment was cancelled, but don't worry - your order is still saved and you can complete the payment anytime.</p>
        </div>

        <!-- Content Section -->
        <div class="content">
            <% if (reason) { %>
            <div class="alert">
                <div class="alert-icon">
                    <i class="fas fa-info-circle"></i>
                </div>
                <div class="alert-content">
                    <div class="alert-title">Cancellation Reason</div>
                    <div class="alert-text"><%= reason %></div>
                </div>
            </div>
            <% } %>

            <% if (order) { %>
            <!-- Order Summary -->
            <div class="order-summary">
                <h3>
                    <i class="fas fa-receipt"></i>
                    Order Summary
                </h3>
                <div class="order-row">
                    <span class="order-label">Order ID:</span>
                    <span class="order-value">#<%= order.orderId %></span>
                </div>
                <div class="order-row">
                    <span class="order-label">Total Amount:</span>
                    <span class="order-value">â‚¹<%= order.totalAmount.toLocaleString() %></span>
                </div>
                <div class="order-row">
                    <span class="order-label">Items:</span>
                    <span class="order-value"><%= order.items.length %> item(s)</span>
                </div>
                <div class="order-row">
                    <span class="order-label">Payment Status:</span>
                    <span class="status-badge">Payment Pending</span>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="action-section">
                <div class="btn-group">
                    <button onclick="retryPayment()" class="btn btn-primary">
                        <i class="fas fa-redo"></i>
                        Retry Payment
                    </button>
                    <a href="/orders/<%= order.orderId %>" class="btn btn-outline">
                        <i class="fas fa-receipt"></i>
                        View Order Details
                    </a>
                </div>
                
                <div class="divider"></div>
                
                <div class="btn-group">
                    <a href="/product/list" class="btn btn-success">
                        <i class="fas fa-shopping-bag"></i>
                        Continue Shopping
                    </a>
                    <a href="/orders/<%= order.orderId %>/cancel" class="btn btn-secondary">
                        <i class="fas fa-times"></i>
                        Cancel Order
                    </a>
                </div>
            </div>
            <% } else { %>
            <!-- No Order Found -->
            <div class="action-section">
                <div class="btn-group">
                    <button onclick="retryPayment()" class="btn btn-primary">
                        <i class="fas fa-redo"></i>
                        Retry Payment
                    </button>
                    <a href="/product/list" class="btn btn-success">
                        <i class="fas fa-shopping-bag"></i>
                        Continue Shopping
                    </a>
                </div>
            </div>
            <% } %>

            <!-- Help Section -->
            <div class="help-box">
                <div class="help-title">
                    <i class="fas fa-question-circle"></i>
                    Why was my payment cancelled?
                </div>
                <div class="help-content">
                    <p><strong>Common reasons for payment cancellation:</strong></p>
                    <ul class="help-list">
                        <li>Payment window was closed or cancelled by user</li>
                        <li>Payment process took too long to complete</li>
                        <li>Network connectivity issues during payment</li>
                        <li>Browser back button was pressed during payment</li>
                        <li>Payment gateway timeout or technical issues</li>
                    </ul>
                    <p><strong>What happens next?</strong></p>
                    <p>Your order is safely saved in our system. You can retry the payment anytime using the "Retry Payment" button above, or visit your orders page to complete the payment later.</p>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="footer-note">
            <p>Need help? Contact our support team at <strong>support@melodia.com</strong> or call <strong>1-800-MELODIA</strong></p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function retryPayment() {
            <% if (order) { %>
            Swal.fire({
                title: 'Retry Payment?',
                text: 'You will be redirected to complete the payment for this order.',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#007bff',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, Retry Payment',
                cancelButtonText: 'Cancel',
                reverseButtons: true,
                customClass: {
                    popup: 'swal2-popup-custom'
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    // Show loading
                    Swal.fire({
                        title: 'Preparing Payment...',
                        text: 'Please wait while we redirect you to the payment page.',
                        allowOutsideClick: false,
                        allowEscapeKey: false,
                        showConfirmButton: false,
                        didOpen: () => {
                            Swal.showLoading();
                        }
                    });
                    
                    // Redirect to checkout with retry parameter
                    setTimeout(() => {
                        window.location.href = '/checkout?retryOrder=<%= order.orderId %>';
                    }, 1500);
                }
            });
            <% } else { %>
            window.location.href = '/cart';
            <% } %>
        }

        // Add smooth animations on page load
        document.addEventListener('DOMContentLoaded', function() {
            // Fade in the container
            const container = document.querySelector('.container');
            container.style.opacity = '0';
            container.style.transform = 'translateY(30px)';
            container.style.transition = 'all 0.8s ease';
            
            setTimeout(() => {
                container.style.opacity = '1';
                container.style.transform = 'translateY(0)';
            }, 100);

            // Add click tracking for analytics
            document.querySelectorAll('.btn').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    console.log('Button clicked:', this.textContent.trim());
                });
            });

            // Add hover effects
            document.querySelectorAll('.btn').forEach(btn => {
                btn.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-2px) scale(1.02)';
                });
                btn.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0) scale(1)';
                });
            });
        });

        // Custom SweetAlert2 styling
        const style = document.createElement('style');
        style.textContent = `
            .swal2-popup-custom {
                font-family: 'Inter', sans-serif !important;
                border-radius: 12px !important;
            }
        `;
        document.head.appendChild(style);
    </script>
</body>
</html>