<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Helvetica, sans-serif;
            background: #f5f5f5;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .page-title {
            position: absolute;
            top: 25px;
            left: 40px;
            color: #f4f4f4;
            font-size: 16px;
            font-weight: 400;
            opacity: 0;
            animation: fadeIn 0.8s ease-out 0.2s forwards;
        }

        .forgot-container {
            background: #ffffff;
            border-radius: 16px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
            padding: 40px 35px;
            width: 100%;
            max-width: 500px;
            text-align: center;
            opacity: 0;
            transform: translateY(20px);
            animation: slideInUp 0.6s ease-out 0.3s forwards;
        }

        @keyframes slideInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }

        .logo {
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 22px;
            font-weight: 600;
            color: #333;
            margin-bottom: 35px;
            opacity: 0;
            animation: fadeIn 0.6s ease-out 0.6s forwards;
        }

        .logo::before {
            content: "â™ª";
            margin-right: 8px;
            font-size: 24px;
            color: #333;
        }

        .forgot-content {
            opacity: 0;
            animation: fadeIn 0.6s ease-out 0.8s forwards;
        }

        .forgot-title {
            font-size: 18px;
            font-weight: 600;
            color: #333;
            margin-bottom: 8px;
            line-height: 1.4;
        }

        .forgot-subtitle {
            font-size: 14px;
            color: #666;
            margin-bottom: 30px;
            line-height: 1.5;
        }

        .forgot-form {
            width: 100%;
        }

        .form-group {
            width: 100%;
            margin-bottom: 20px;
            text-align: left;
        }

        .form-label {
            display: block;
            font-size: 14px;
            font-weight: 500;
            color: #333;
            margin-bottom: 8px;
        }

        .form-input {
            width: 100%;
            padding: 14px 16px;
            border: 1.5px solid #ddd;
            border-radius: 8px;
            font-size: 14px;
            background: #ffffff;
            transition: all 0.3s ease;
            outline: none;
            color: #333;
        }

        .form-input:focus {
            border-color: #666;
            box-shadow: 0 0 0 3px rgba(102, 102, 102, 0.1);
            transform: translateY(-1px);
        }

        .form-input::placeholder {
            color: #999;
            font-size: 14px;
        }

        .email-dropdown {
            position: relative;
        }

        .email-suggestions {
            position: absolute;
            top: 100%;
            left: 0;
            right: 0;
            background: #ffffff;
            border: 1.5px solid #ddd;
            border-top: none;
            border-radius: 0 0 8px 8px;
            max-height: 120px;
            overflow-y: auto;
            z-index: 10;
            display: none;
        }

        .email-suggestion {
            padding: 10px 16px;
            cursor: pointer;
            font-size: 14px;
            color: #333;
            transition: background-color 0.2s ease;
        }

        .email-suggestion:hover {
            background-color: #f5f5f5;
        }

        .forgot-button {
            width: 100%;
            padding: 14px;
            background: #000000;
            color: #ffffff;
            border: none;
            border-radius: 8px;
            font-size: 15px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 10px;
        }

        .forgot-button:hover {
            background: #1a1a1a;
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
        }

        .forgot-button:active {
            transform: translateY(0);
        }

        .forgot-button:disabled {
            background: #ccc;
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }

        .back-to-login {
            margin-top: 20px;
            font-size: 14px;
            color: #666;
        }

        .back-link {
            color: #333;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .back-link:hover {
            color: #000;
            text-decoration: underline;
        }

        /* Loading spinner */
        .loading-spinner {
            display: inline-block;
            width: 16px;
            height: 16px;
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-top: 2px solid white;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        /* Form validation states */
        .form-input.error {
            border-color: #e53e3e;
            box-shadow: 0 0 0 3px rgba(229, 62, 62, 0.1);
        }

        .form-input.success {
            border-color: #38a169;
            box-shadow: 0 0 0 3px rgba(56, 161, 105, 0.1);
        }

        .shake {
            animation: shake 0.5s ease-in-out;
        }

        @keyframes shake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-5px); }
            75% { transform: translateX(5px); }
        }

        /* Responsive Design */
        @media (max-width: 480px) {
            .forgot-container {
                padding: 30px 25px;
                max-width: 350px;
            }
        }
    </style>
</head>
<body>
    <div class="page-title">forgot password</div>
    
    <div class="forgot-container">
        <div class="logo">Melodia</div>
        
        <div class="forgot-content">
            <div class="forgot-title">Forgot Password</div>
            <div class="forgot-subtitle">Enter your email and we'll send you a link to reset your password</div>
            
            <form id="forgotForm" action="/forgot-password" method="POST" class="forgot-form">
                <div class="form-group">
                    <label for="email" class="form-label">Email</label>
                    <div class="email-dropdown">
                        <input 
                            type="email" 
                            id="email" 
                            name="email" 
                            class="form-input" 
                            placeholder="Enter your Email"
                            required
                            autocomplete="email"
                        >
                        <div class="email-suggestions" id="emailSuggestions"></div>
                    </div>
                </div>
                
                <button type="submit" class="forgot-button">Send Reset Link</button>
            </form>
            
            <div class="back-to-login">
                Remember your password? <a href="/login" class="back-link">Back to Login</a>
            </div>
        </div>
    </div>

    <script>
        // Common email domains for suggestions
        const commonDomains = [
            'gmail.com',
            'yahoo.com',
            'outlook.com',
            'hotmail.com',
            'icloud.com',
            'live.com',
            'aol.com'
        ];

        // Email input functionality
        const emailInput = document.getElementById('email');
        const emailSuggestions = document.getElementById('emailSuggestions');

        emailInput.addEventListener('input', function() {
            const value = this.value.toLowerCase();
            const atIndex = value.indexOf('@');
            
            // Clear previous suggestions
            emailSuggestions.innerHTML = '';
            emailSuggestions.style.display = 'none';
            
            if (atIndex > 0 && atIndex < value.length - 1) {
                const username = value.substring(0, atIndex);
                const domain = value.substring(atIndex + 1);
                
                // Find matching domains
                const matchingDomains = commonDomains.filter(d => 
                    d.toLowerCase().startsWith(domain) && d !== domain
                );
                
                if (matchingDomains.length > 0) {
                    matchingDomains.slice(0, 4).forEach(domain => {
                        const suggestion = document.createElement('div');
                        suggestion.className = 'email-suggestion';
                        suggestion.textContent = username + '@' + domain;
                        suggestion.addEventListener('click', function() {
                            emailInput.value = this.textContent;
                            emailSuggestions.style.display = 'none';
                            emailInput.focus();
                        });
                        emailSuggestions.appendChild(suggestion);
                    });
                    
                    emailSuggestions.style.display = 'block';
                }
            }
            
            // Remove error state
            this.classList.remove('error');
        });

        // Hide suggestions when clicking outside
        document.addEventListener('click', function(e) {
            if (!emailInput.contains(e.target) && !emailSuggestions.contains(e.target)) {
                emailSuggestions.style.display = 'none';
            }
        });

        // Form submission
        document.getElementById('forgotForm').addEventListener('submit', function(e) {
            const email = document.getElementById('email').value;
            
            // Clear previous states
            document.querySelectorAll('.form-input').forEach(input => {
                input.classList.remove('error', 'success', 'shake');
            });
            
            let hasErrors = false;
            
            // Email validation
            if (!email) {
                const input = document.getElementById('email');
                input.classList.add('error', 'shake');
                hasErrors = true;
            } else {
                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                const input = document.getElementById('email');
                if (!emailRegex.test(email)) {
                    input.classList.add('error', 'shake');
                    hasErrors = true;
                } else {
                    input.classList.add('success');
                }
            }
            
            if (hasErrors) {
                e.preventDefault();
                return;
            }

            // Show loading state
            const forgotBtn = this.querySelector('.forgot-button');
            const originalText = forgotBtn.innerHTML;
            forgotBtn.innerHTML = '<div class="loading-spinner"></div> Sending...';
            forgotBtn.disabled = true;
        });

        // Remove shake class after animation
        document.addEventListener('animationend', function(e) {
            if (e.animationName === 'shake') {
                e.target.classList.remove('shake');
            }
        });

    </script>

    <!-- Flash message handling -->
    <% if (typeof error !== 'undefined') { %>
        <script>
            const emailInputError = document.getElementById('email');
            emailInputError.classList.add('error', 'shake');
            alert('<%= error %>');
        </script>
    <% } %>
    
    <% if (typeof success !== 'undefined') { %>
        <script>
            const emailInputSuccess = document.getElementById('email');
            emailInputSuccess.classList.add('success');
            alert('<%= success %>');
        </script>
    <% } %>
</body>
</html>
