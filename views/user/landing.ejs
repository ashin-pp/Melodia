        }

        /* Stats Section */
        .stats-section {
            padding: 60px 60px 0;
            background: transparent;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 40px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .stat-item {
            text-align: center;
            padding: 30px 20px;
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            backdrop-filter: blur(10px);
            transition: all 0.3s ease;
        }

        .stat-item:hover {
            transform: translateY(-5px);
            background: rgba(255, 255, 255, 0.05);
            border-color: rgba(255, 107, 107, 0.3);
        }

        .stat-number {
            font-size: 36px;
            font-weight: 800;
            color: #ff6b6b;
            margin-bottom: 8px;
        }

        .stat-label {
            font-size: 14px;
            color: rgba(255, 255, 255, 0.6);
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        /* Products Section */
        .products-section {
            padding: 120px 60px;
            background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
            color: #333333;
        }

        .section-title {
            text-align: center;
            font-size: 42px;
            font-weight: 700;
            margin-bottom: 20px;
            color: #1a1a1a;
        }

        .section-subtitle {
            text-align: center;
            font-size: 18px;
            color: #666666;
            margin-bottom: 80px;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
        }

        .products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 40px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .product-card {
            background: #ffffff;
            border-radius: 24px;
            padding: 40px 30px;
            text-align: center;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
            transition: all 0.4s ease;
            border: 1px solid rgba(0, 0, 0, 0.05);
            position: relative;
            overflow: hidden;
        }

        .product-card:hover {
            transform: translateY(-15px);
            box-shadow: 0 25px 60px rgba(0, 0, 0, 0.15);
        }

        .product-name {
            font-size: 22px;
            font-weight: 700;
            margin-bottom: 8px;
            color: #1a1a1a;
        }

        .product-image-container {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 30px;
            height: 200px;
            position: relative;
        }

        .product-image-container img {
            max-width: 180px;
            max-height: 180px;
            object-fit: contain;
            transition: all 0.4s ease;
        }

        .product-image-container:hover img {
            transform: scale(1.1) rotate(5deg);
        }

        /* Holiday Section */
        .holiday-section {
            padding: 0;
            margin: 0;
            background: url('/image/user/home/bottom.jpg') center/cover no-repeat;
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            color: #ffffff;
            position: relative;
            min-height: 600px;
            display: flex;
            align-items: center;
        }

        .holiday-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, rgba(0, 0, 0, 0.6) 0%, rgba(0, 0, 0, 0.3) 100%);
            z-index: 1;
        }

        .holiday-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 120px 60px;
            position: relative;
            z-index: 2;
            text-align: center;
        }

        .holiday-title {
            font-size: 54px;
            font-weight: 800;
            margin-bottom: 24px;
            color: #ffffff;
            text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.7);
        }

        .holiday-subtitle {
            font-size: 22px;
            margin-bottom: 40px;
            opacity: 0.9;
            color: #f0f0f0;
            text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.7);
        }

        .shop-btn {
            background: linear-gradient(135deg, #ffffff, #f0f0f0);
            color: #1a1a1a;
            border: none;
            padding: 18px 40px;
            border-radius: 30px;
            font-size: 16px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
        }

        .shop-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.4);
            background: linear-gradient(135deg, #f0f0f0, #e0e0e0);
        }

        .color-options {
            display: flex;
            gap: 8px;
            justify-content: center;
            flex-wrap: wrap;
            max-width: 100%;
            margin: 10px 0;
        }

        .color-dot {
            width: 20px;
            height: 20px;
            border-radius: 50%;
            cursor: pointer;
            border: 2px solid #ddd;
            transition: all 0.3s ease;
            position: relative;
            box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.1);
        }

        .color-dot:hover {
            transform: scale(1.3);
        }

        .color-dot.active {
            border-color: #333333;
            box-shadow: 0 0 0 2px #ffffff, 0 0 0 4px #333333;
            transform: scale(1.1);
        }

        .color-dot.white.active {
            border-color: #000000;
            box-shadow: 0 0 0 2px #ffffff, 0 0 0 4px #000000;
        }

        .color-dot.out-of-stock {
            opacity: 0.5;
            position: relative;
        }

        .color-dot.out-of-stock::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 2px;
            height: 120%;
            background-color: #ff0000;
            transform: translate(-50%, -50%) rotate(45deg);
        }

        .color-dot.out-of-stock:hover {
            transform: scale(1.1);
            cursor: not-allowed;
        }

