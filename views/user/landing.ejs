        //     form.submit();
        // });

        // Shop button functionality
        document.querySelector('.shop-btn').addEventListener('click', function () {
            window.location.href = '/login'
        });

        // Image loading with fade-in effect
        document.querySelectorAll('img').forEach(img => {
            img.addEventListener('load', function () {
                this.style.opacity = '0';
                this.style.transform = 'scale(0.8)';
                this.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
                setTimeout(() => {
                    this.style.opacity = '1';
                    this.style.transform = 'scale(1)';
                }, 100);
            });
        });

        // Intersection Observer for animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        // Observe elements for scroll animations
        document.querySelectorAll('.product-card, .stat-item').forEach(el => {
            el.style.opacity = '0';
            el.style.transform = 'translateY(30px)';
            el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
            observer.observe(el);
        });

        // Holiday section background fallback
        document.addEventListener('DOMContentLoaded', function () {
            const holidaySection = document.querySelector('.holiday-section');
            const img = new Image();

            img.onload = function () {
                // Background image loaded successfully
            };

            img.onerror = function () {
                holidaySection.classList.add('fallback');
                holidaySection.style.background = 'linear-gradient(135deg, #8b4513 0%, #cd853f 50%, #d2691e 100%)';
                // Background image failed to load, using fallback
            };

            img.src = '/image/user/home/bottom.jpg';

            // Initialize the automatic carousel
            initCarousel();
        });

        // Performance optimization - pause carousel when not in viewport
        const carouselObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    startAutoSlide();
                } else {
                    stopAutoSlide();
                }
            });
        }, { threshold: 0.5 });

        // Observe the carousel container
        carouselObserver.observe(document.querySelector('.headphone-carousel'));

        // Interactive color selection function for landing page
        function selectLandingColor(colorDot, productId) {
            const productCard = colorDot.closest('.product-card');
            const variantId = colorDot.getAttribute('data-variant-id');
            const stock = parseInt(colorDot.getAttribute('data-stock'));

            // Check if variant is out of stock
            if (stock === 0) {
                alert('This color variant is currently out of stock.');
                return;
            }

            // Remove active class from all color dots in this product
            productCard.querySelectorAll('.color-dot').forEach(dot => dot.classList.remove('active'));
            // Add active class to clicked dot
            colorDot.classList.add('active');

            // Fetch variant data via API and update display
            fetch(`/api/variant/${variantId}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success && data.variant) {
                        const variant = data.variant;

                        // Update image
                        const productImage = productCard.querySelector('img');
                        if (variant.images && variant.images.length > 0) {
                            const imageUrl = typeof variant.images[0] === 'string' ? variant.images[0] : variant.images[0].url;
                            productImage.src = imageUrl;
                        }

                        // Update price
                        const priceElement = productCard.querySelector('.product-price');
                        if (variant.salePrice === variant.regularPrice) {
                            priceElement.innerHTML = `‚Çπ${variant.salePrice.toLocaleString()}`;
                        } else {
                            priceElement.innerHTML = `‚Çπ${variant.salePrice.toLocaleString()} <span style="text-decoration: line-through; color: #999; font-size: 0.9em;">‚Çπ${variant.regularPrice.toLocaleString()}</span>`;
                        }
                    }
                })
                .catch(error => {
                    console.error('Error fetching variant data:', error);
                });
        }
