



<%- include('../partials/header-common', { title: 'About Us - Melodia' }) %>   

    <style>
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            background: #ffffff;
            color: #1a1a1a;
            line-height: 1.6;
            margin-top: 100px;
            position: relative;
            overflow-x: hidden;
        }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background:
                radial-gradient(circle at 20% 80%, rgba(102, 126, 234, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgba(118, 75, 162, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 40% 40%, rgba(102, 126, 234, 0.05) 0%, transparent 50%);
            pointer-events: none;
            z-index: -1;
        }

        .about-hero {
            background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
            padding: 80px 60px 40px;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .about-hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="1" fill="rgba(0,0,0,0.1)"/><circle cx="80" cy="30" r="1.5" fill="rgba(102,126,234,0.2)"/><circle cx="60" cy="70" r="1" fill="rgba(118,75,162,0.2)"/><circle cx="30" cy="80" r="1.2" fill="rgba(0,0,0,0.08)"/></svg>') repeat;
            animation: float 20s infinite linear;
            pointer-events: none;
        }

        @keyframes float {
            0% {
                transform: translateY(0px) rotate(0deg);
            }

            100% {
                transform: translateY(-100px) rotate(360deg);
            }
        }

        .hero-title {
            font-size: 48px;
            font-weight: 800;
            margin-bottom: 16px;
            background: linear-gradient(135deg, #1a1a1a 0%, #333333 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .hero-subtitle {
            font-size: 18px;
            color: rgba(26, 26, 26, 0.7);
            max-width: 600px;
            margin: 0 auto;
        }

        .about-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 60px 30px;
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 80px;
            align-items: center;
        }

        .about-image {
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
        }

        .product-container {
            position: relative;
            width: 400px;
            height: 500px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(0, 0, 0, 0.02);
            border: 1px solid rgba(0, 0, 0, 0.05);
            border-radius: 24px;
            overflow: hidden;
        }

        .product-image img {
            width: 350px;
            height: 400px;
            object-fit: contain;
            filter: drop-shadow(0 25px 80px rgba(0, 0, 0, 0.3));
            transition: transform 0.6s ease;
        }

        .product-container:hover .product-image img {
            transform: scale(1.05) rotate(2deg);
        }

        .about-content h2 {
            font-size: 36px;
            font-weight: 700;
            margin-bottom: 24px;
            color: #1a1a1a;
        }

        .about-text {
            font-size: 16px;
            line-height: 1.8;
            color: rgba(26, 26, 26, 0.8);
            margin-bottom: 24px;
            padding: 20px;
            background: rgba(0, 0, 0, 0.02);
            border: 1px solid rgba(0, 0, 0, 0.05);
            border-radius: 12px;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
            margin-top: 40px;
        }

        .stat-item {
            text-align: center;
            padding: 20px;
            background: rgba(0, 0, 0, 0.02);
            border: 1px solid rgba(0, 0, 0, 0.05);
            border-radius: 12px;
            transition: all 0.3s ease;
        }

        .stat-item:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }

        .stat-number {
            font-size: 24px;
            font-weight: 800;
            color: #ff6b6b;
            margin-bottom: 8px;
        }

        .stat-label {
            font-size: 12px;
            color: rgba(26, 26, 26, 0.6);
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .about-hero {
                padding: 60px 20px 30px;
            }

            .hero-title {
                font-size: 36px;
            }

            .about-container {
                grid-template-columns: 1fr;
                gap: 40px;
                padding: 40px 20px;
            }

            .product-container {
                width: 300px;
                height: 350px;
            }

            .product-image img {
                width: 250px;
                height: 300px;
            }

            .stats-grid {
                grid-template-columns: 1fr;
                gap: 15px;
            }
        }
    </style>

    <body>
