                </ul>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2024 Melodia. All rights reserved. Designed with ‚ô™ for audio enthusiasts worldwide.</p>
        </div>
    </footer>

    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.14.5/dist/sweetalert2.all.min.js"></script>
    <script>
        // Navbar scroll effect - same as home page
        window.addEventListener('scroll', () => {
            const navbar = document.getElementById('navbar');
            if (window.scrollY > 100) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });

        // Smooth scrolling for navigation links - same as home page
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Icon button functionality - same as home page
        document.querySelector('.profile-btn').addEventListener('click', function() {
            window.location.href = '/profile';
        });

        // Cancel Edit with SweetAlert
        function cancelEdit() {
            Swal.fire({
                title: 'Are you sure?',
                text: 'All unsaved changes will be lost.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#ff6b6b',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, cancel',
                cancelButtonText: 'Continue editing'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.reload();
                }
            });
        }

        // Logout Confirmation with SweetAlert
        function confirmLogout() {
            Swal.fire({
                title: 'Logout',
                text: 'Are you sure you want to logout?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#ff6b6b',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, logout',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/logout';
                }
            });
        }

        // Form validation with SweetAlert
        document.getElementById('profileForm').addEventListener('submit', function(e) {
            const firstName = document.getElementById('firstName').value.trim();
            const lastName = document.getElementById('lastName').value.trim();
            const email = document.getElementById('email').value.trim();

            if (!firstName || !lastName || !email) {
                e.preventDefault();
                Swal.fire({
                    title: 'Validation Error',
                    text: 'Please fill in all required fields.',
                    icon: 'error',
                    confirmButtonColor: '#ff6b6b'
                });
                return false;
            }

            // Email validation
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(email)) {
                e.preventDefault();
                Swal.fire({
                    title: 'Invalid Email',
                    text: 'Please enter a valid email address.',
                    icon: 'error',
                    confirmButtonColor: '#ff6b6b'
                });
                return false;
            }
        });

        // Handle success/error messages with SweetAlert
        <% if (locals.message) { %>
            Swal.fire({
                title: 'Message',
                text: '<%= message %>',
                icon: 'info',
                confirmButtonColor: '#ff6b6b'
            });
        <% } %>

        // Handle error messages
        <% if (locals.error) { %>
            Swal.fire({
                title: 'Error',
                text: '<%= error %>',
                icon: 'error',
                confirmButtonColor: '#ff6b6b'
            });
        <% } %>

        // Handle success messages
        <% if (locals.success) { %>
            Swal.fire({
                title: 'Success',
                text: '<%= success %>',
                icon: 'success',
                confirmButtonColor: '#28a745'
            });
        <% } %>
    </script>
</body>
</html>
