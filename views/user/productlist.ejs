<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Melodia - Choose Your Style</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif; background: #0a0a0a; color: #ffffff; line-height: 1.5; }
        
        .navbar { display: flex; justify-content: space-between; align-items: center; padding: 18px 60px; background: #0a0a0a; border-bottom: 1px solid rgba(255, 255, 255, 0.08); position: fixed; top: 0; width: 100%; z-index: 1000; }
        .logo { display: flex; align-items: center; font-size: 22px; font-weight: 600; color: #ffffff; text-decoration: none; }
        .logo::before { content: "♪"; margin-right: 10px; font-size: 26px; }
        .nav-links { display: flex; list-style: none; gap: 35px; align-items: center; }
        .nav-links a { color: rgba(255, 255, 255, 0.75); text-decoration: none; font-size: 14px; font-weight: 500; text-transform: uppercase; letter-spacing: 0.8px; }
        .nav-links a:hover, .nav-links a.active { color: #ffffff; }
        .nav-actions { display: flex; align-items: center; gap: 18px; }
        .search-container { position: relative; }
        .search-box { background: rgba(255, 255, 255, 0.06); border: 1px solid rgba(255, 255, 255, 0.12); border-radius: 18px; padding: 9px 16px 9px 40px; color: #ffffff; outline: none; width: 240px; font-size: 13px; }
        .search-icon { position: absolute; left: 14px; top: 50%; transform: translateY(-50%); color: rgba(255, 255, 255, 0.5); font-size: 13px; }
        .nav-icons { display: flex; align-items: center; gap: 16px; }
        .nav-icon { color: rgba(255, 255, 255, 0.75); font-size: 16px; cursor: pointer; }
        .nav-icon:hover { color: #ffffff; }
        
        .hero-section { background: #0a0a0a; padding: 100px 60px 20px; text-align: center; }
        .hero-title { font-size: 64px; font-weight: 700; margin-bottom: 4px; letter-spacing: -2px; line-height: 1.1; background: linear-gradient(135deg, #2c2c2c 0%, #444444 15%, #666666 30%, #888888 45%, #ffaa00 60%, #ff6600 80%, #ff4400 100%); background-size: 200% 200%; -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; }
        
        .main-layout { display: flex; max-width: 1600px; margin: 0 auto; gap: 0; min-height: calc(100vh - 200px); }
        
        .sidebar-filters { width: 300px; background: rgba(255, 255, 255, 0.02); border-right: 1px solid rgba(255, 255, 255, 0.08); padding: 25px 20px; position: sticky; top: 76px; height: fit-content; max-height: calc(100vh - 76px); overflow-y: auto; }
        .sidebar-title { font-size: 18px; font-weight: 600; color: #ffffff; margin-bottom: 25px; }
        .filter-section { margin-bottom: 25px; padding-bottom: 20px; border-bottom: 1px solid rgba(255, 255, 255, 0.05); }
        .filter-title { font-size: 14px; font-weight: 600; color: #ffffff; margin-bottom: 12px; text-transform: uppercase; letter-spacing: 0.5px; }
        .filter-input, .filter-select { width: 100%; background: rgba(255, 255, 255, 0.05); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 8px; padding: 10px 12px; color: #ffffff; font-size: 13px; outline: none; margin-bottom: 10px; }
        .filter-input:focus, .filter-select:focus { border-color: rgba(255, 255, 255, 0.25); background: rgba(255, 255, 255, 0.08); }
        .filter-select option { background: #1a1a1a; color: #ffffff; }
        .price-range { display: flex; gap: 8px; }
        .price-range .filter-input { margin-bottom: 0; }
        
        .brand-filters { display: flex; flex-direction: column; gap: 8px; max-height: 200px; overflow-y: auto; }
        .brand-checkbox { display: flex; align-items: center; gap: 8px; cursor: pointer; padding: 4px 0; font-size: 13px; color: rgba(255, 255, 255, 0.8); }
        .brand-checkbox input[type="checkbox"] { display: none; }
        .brand-checkbox .checkmark { width: 16px; height: 16px; border: 1px solid rgba(255, 255, 255, 0.3); border-radius: 3px; background: transparent; position: relative; transition: all 0.3s ease; }
        .brand-checkbox input[type="checkbox"]:checked + .checkmark { background: #667eea; border-color: #667eea; }
        .brand-checkbox input[type="checkbox"]:checked + .checkmark::after { content: '✓'; position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); color: white; font-size: 10px; font-weight: bold; }
        .brand-checkbox:hover { color: rgba(255, 255, 255, 1); }
        .brand-checkbox:hover .checkmark { border-color: rgba(255, 255, 255, 0.6); }
        
        .filter-count { background: #667eea; color: white; padding: 2px 8px; border-radius: 12px; font-size: 11px; font-weight: 600; margin-left: 8px; }
        .selected-count { background: rgba(255, 255, 255, 0.2); color: rgba(255, 255, 255, 0.8); padding: 2px 6px; border-radius: 8px; font-size: 10px; font-weight: 500; margin-left: 6px; }
        .btn-secondary:hover { background: rgba(255, 255, 255, 0.15); transform: translateY(-2px); }
        
        .content-area { flex: 1; padding: 25px 40px 40px; background: #0a0a0a; }
        .content-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 25px; padding-bottom: 15px; border-bottom: 1px solid rgba(255, 255, 255, 0.05); }
        .results-info { color: rgba(255, 255, 255, 0.7); font-size: 14px; font-weight: 500; }
        
        .products-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 25px; margin-bottom: 40px; }
        .product-card { background: rgba(255, 255, 255, 0.03); border: 1px solid rgba(255, 255, 255, 0.06); border-radius: 16px; overflow: hidden; transition: all 0.4s ease; cursor: pointer; position: relative; }
        .product-card:hover { background: rgba(255, 255, 255, 0.06); border-color: rgba(255, 255, 255, 0.12); transform: translateY(-8px) scale(1.02); box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3); }
        
        .product-image-container { aspect-ratio: 1.1; background: rgba(255, 255, 255, 0.02); display: flex; align-items: center; justify-content: center; overflow: hidden; position: relative; }
        .product-image { width: 85%; height: 85%; object-fit: contain; transition: all 0.4s ease; }
        .product-card:hover .product-image { transform: scale(1.08) rotate(-2deg); }
        
        .product-badge { position: absolute; top: 12px; right: 12px; background: rgba(255, 107, 107, 0.9); color: #ffffff; padding: 6px 10px; border-radius: 12px; font-size: 11px; font-weight: 600; }
        
        .product-info { padding: 20px; }
        .product-name { font-size: 15px; font-weight: 600; color: #ffffff; margin-bottom: 8px; line-height: 1.3; }
        .product-brand { font-size: 12px; color: rgba(255, 255, 255, 0.6); margin-bottom: 12px; text-transform: uppercase; letter-spacing: 0.5px; }
        .product-price { display: flex; align-items: center; gap: 8px; margin-bottom: 15px; }
        .current-price { font-size: 16px; font-weight: 700; color: #ffffff; }
        .original-price { font-size: 13px; color: rgba(255, 255, 255, 0.4); text-decoration: line-through; }
        .discount-percent { font-size: 11px; background: #ff4757; color: white; padding: 2px 6px; border-radius: 4px; font-weight: 600; }
        
        .product-variants { margin-bottom: 15px; }
        .variant-colors { display: flex; gap: 6px; flex-wrap: wrap; }
        .variant-color { width: 20px; height: 20px; border-radius: 50%; border: 2px solid rgba(255, 255, 255, 0.3); cursor: pointer; position: relative; }
        .variant-color.red { background: #ff4757; }
        .variant-color.blue { background: #3742fa; }
        .variant-color.black { background: #2f3542; }
        .variant-color.white { background: #f1f2f6; }
        .variant-color.green { background: #2ed573; }
        .variant-color.yellow { background: #ffa502; }
        .variant-color.purple { background: #5f27cd; }
        .variant-color.pink { background: #ff3838; }
        .variant-color.gray { background: #747d8c; }
        .variant-color.brown { background: #8b4513; }
        .variant-color:hover { transform: scale(1.2); border-color: rgba(255, 255, 255, 0.6); }
        
        .product-actions { display: flex; gap: 8px; opacity: 0; transform: translateY(15px); transition: all 0.4s ease; }
        .product-card:hover .product-actions { opacity: 1; transform: translateY(0); }
        .btn-primary { flex: 1; background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); border-radius: 8px; padding: 10px 16px; color: #ffffff; font-size: 12px; font-weight: 500; cursor: pointer; text-align: center; text-decoration: none; }
        .btn-primary:hover { background: rgba(255, 255, 255, 0.15); transform: translateY(-2px); }
        
        .pagination { display: flex; justify-content: center; align-items: center; gap: 8px; margin-top: 40px; }
        .pagination-btn { background: rgba(255, 255, 255, 0.05); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 8px; padding: 10px 15px; color: rgba(255, 255, 255, 0.7); text-decoration: none; font-size: 13px; font-weight: 500; cursor: pointer; }
        .pagination-btn:hover { background: rgba(255, 255, 255, 0.1); color: #ffffff; transform: translateY(-2px); }
        .pagination-current { background: rgba(255, 255, 255, 0.1); color: #ffffff; font-weight: 600; }
        
        .empty-state { grid-column: 1 / -1; text-align: center; padding: 60px 20px; color: rgba(255, 255, 255, 0.5); }
        .empty-state i { font-size: 48px; margin-bottom: 20px; opacity: 0.3; }
        .empty-state h3 { font-size: 20px; font-weight: 600; margin-bottom: 12px; color: rgba(255, 255, 255, 0.7); }
        
        @media (max-width: 968px) {
            .navbar { flex-direction: column; gap: 20px; padding: 20px; }
            .hero-title { font-size: 42px; }
            .hero-section { padding: 80px 20px 15px; }
            .main-layout { flex-direction: column; padding: 0; }
            .sidebar-filters { width: 100%; position: static; }
            .content-area { padding: 20px 15px; }
            .products-grid { grid-template-columns: 1fr; gap: 15px; }
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar">
        <a href="/" class="logo">Melodia</a>
        
        <ul class="nav-links">
            <li><a href="/">Home</a></li>
            <li><a href="/user/product/list" class="active">Shop</a></li>
            <!-- <li><a href="#categories">Categories</a></li> -->
            <li><a href="#about">About</a></li>
            <li><a href="#contact">Contact</a></li>
        </ul>

        <div class="nav-actions">
            <div class="search-container">
                <i class="fas fa-search search-icon"></i>
                <input type="text" class="search-box" placeholder="Search products..." value="<%= q || '' %>">
            </div>
            <div class="nav-icons">
                <i class="fas fa-heart nav-icon"></i>
                <i class="fas fa-shopping-cart nav-icon"></i>
              <a href="/profile">  <i class="fas fa-user nav-icon"></i></a>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero-section">
        <h1 class="hero-title">Choose Your</h1>
        <h2 class="hero-title">Style</h2>
    </section>

    <!-- Main Layout -->
    <div class="main-layout">
        <!-- Sidebar Filters -->
        <aside class="sidebar-filters">
            <h3 class="sidebar-title">
                <i class="fas fa-filter"></i> Filters
                <span id="activeFiltersCount" class="filter-count" style="display: none;"></span>
            </h3>
            
            <form method="GET" action="/user/product/list" id="filterForm">
                <input type="hidden" name="brands" id="selectedBrands" value="<%= brands ? brands.join(',') : '' %>">
                
                <div class="filter-section">
                    <h4 class="filter-title">Search</h4>
                    <input type="text" name="q" class="filter-input" placeholder="Search products..." value="<%= q || '' %>">
                </div>

                <div class="filter-section">
                    <h4 class="filter-title">Category</h4>
                    <select name="category" class="filter-select">
                        <option value="">All Categories</option>
                        <% categories.forEach(cat => { %>
                            <option value="<%= cat._id %>" <%= category === cat._id.toString() ? 'selected' : '' %>>
                                <%= cat.name %> (<%= cat.productCount %>)
                            </option>
                        <% }) %>
                    </select>
                </div>

                <div class="filter-section">
                    <h4 class="filter-title">Price Range</h4>
                    <div class="price-range">
                        <input type="number" name="priceMin" class="filter-input" placeholder="Min" value="<%= priceMin || '' %>">
                        <input type="number" name="priceMax" class="filter-input" placeholder="Max" value="<%= priceMax || '' %>">
                    </div>
                </div>

                <div class="filter-section">
                    <h4 class="filter-title">
                        Brands 
                        <span id="selectedBrandCount" class="selected-count" style="display: none;"></span>
                    </h4>
                    <div class="brand-filters">
                        <% if (typeof allBrands !== 'undefined' && allBrands && allBrands.length > 0) { %>
                            <% allBrands.forEach(brand => { %>
                                <label class="brand-checkbox">
                                    <input type="checkbox" name="brandFilter" value="<%= brand %>" 
                                           <%= brands && brands.includes(brand) ? 'checked' : '' %>>
                                    <span class="checkmark"></span>
                                    <%= brand %>
                                </label>
                            <% }) %>
                        <% } %>
                    </div>
                </div>

                <div class="filter-section">
                    <h4 class="filter-title">Sort By</h4>
                    <select name="sort" class="filter-select">
                        <option value="newest" <%= sort === 'newest' ? 'selected' : '' %>>Newest First</option>
                        <option value="priceAsc" <%= sort === 'priceAsc' ? 'selected' : '' %>>Price: Low to High</option>
                        <option value="priceDesc" <%= sort === 'priceDesc' ? 'selected' : '' %>>Price: High to Low</option>
                        <option value="nameAsc" <%= sort === 'nameAsc' ? 'selected' : '' %>>Name: A to Z</option>
                        <option value="nameDesc" <%= sort === 'nameDesc' ? 'selected' : '' %>>Name: Z to A</option>
                    </select>
                </div>

                <div style="display: flex; gap: 10px; margin-top: 20px;">
                    <button type="submit" class="btn-primary" style="flex: 1;">Apply Filters</button>
                    <button type="button" id="clearFilters" class="btn-secondary" style="flex: 1; background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); border-radius: 8px; padding: 10px; color: #ffffff; font-size: 12px; cursor: pointer;">Clear All</button>
                </div>
            </form>
        </aside>

        <!-- Content Area -->
        <main class="content-area">
            <div class="content-header">
                <div class="results-info">
                    Showing <%= products.length %> of <%= totalProducts || 0 %> products
                </div>
            </div>

            <!-- Products Grid -->
            <div class="products-grid">
                <% if (products && products.length > 0) { %>
                    <% products.forEach(product => { %>
                        <% 
                            // Get first variant and image with fallbacks
                            let firstVariant = null;
                            let firstImage = 'https://via.placeholder.com/400x400/333333/ffffff?text=No+Image';
                            let lowestPrice = 0;
                            let lowestSalePrice = 0;
                            
                            if (product.variantDocs && product.variantDocs.length > 0) {
                                firstVariant = product.variantDocs[0];
                                if (firstVariant.images && firstVariant.images.length > 0) {
                                    firstImage = typeof firstVariant.images[0] === 'string' ? firstVariant.images[0] : firstVariant.images[0].url;
                                }
                                lowestPrice = product.lowestPrice || firstVariant.regularPrice || 0;
                                lowestSalePrice = product.lowestSalePrice || firstVariant.salePrice || firstVariant.regularPrice || 0;
                            }
                        %>
                        
                        <div class="product-card" onclick="window.location.href='/user/products/<%= product._id %>'">
                            <div class="product-image-container">
                                <img src="<%= firstImage %>" alt="<%= product.productName %>" class="product-image" onerror="this.src='https://via.placeholder.com/400x400/333333/ffffff?text=No+Image'">
                                <% if (product.bestOffer > 0) { %>
                                    <div class="product-badge"><%= Math.round(product.bestOffer) %>% OFF</div>
                                <% } %>
                            </div>

                            <div class="product-info">
                                <h3 class="product-name"><%= product.productName %></h3>
                                <p class="product-brand"><%= product.brand %></p>
                                
                                <div class="product-price">
                                    <span class="current-price">₹<%= lowestSalePrice %></span>
                                    <% if (lowestPrice > lowestSalePrice) { %>
                                        <span class="original-price">₹<%= lowestPrice %></span>
                                        <% const discount = Math.round(((lowestPrice - lowestSalePrice) / lowestPrice) * 100); %>
                                        <span class="discount-percent"><%= discount %>% OFF</span>
                                    <% } %>
                                </div>

                                <!-- Show available colors if variants exist -->
                                <!-- <% if (product.variantDocs && product.variantDocs.length > 0) { %>
                                    <div class="product-variants">
                                        <div class="variant-colors">
                                            <% product.variantDocs.forEach(variant => { %>
                                                <% const colorClass = variant.color.toLowerCase().replace(/\s+/g, ''); %>
                                                <div class="variant-color <%= colorClass %>" title="<%= variant.color %>"></div>
                                            <% }) %>
                                        </div>
                                    </div>
                                <% } %> -->

                                <div class="product-actions">
                                    <a href="/user/products/<%= product._id %>" class="btn-primary">View Details</a>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="empty-state">
                        <i class="fas fa-search"></i>
                        <h3>No products found</h3>
                        <p>Try adjusting your search or filter criteria</p>
                    </div>
                <% } %>
            </div>

            <!-- Pagination -->
            <% if (totalPages > 1) { %>
                <div class="pagination">
                    <% if (currentPage > 1) { %>
                        <a href="?page=<%= currentPage - 1 %>&q=<%= q || '' %>&category=<%= category || '' %>&sort=<%= sort || '' %>&priceMin=<%= priceMin || '' %>&priceMax=<%= priceMax || '' %>&brands=<%= brands ? brands.join(',') : '' %>" class="pagination-btn">Previous</a>
                    <% } %>
                    
                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <% if (i === currentPage) { %>
                            <span class="pagination-btn pagination-current"><%= i %></span>
                        <% } else { %>
                            <a href="?page=<%= i %>&q=<%= q || '' %>&category=<%= category || '' %>&sort=<%= sort || '' %>&priceMin=<%= priceMin || '' %>&priceMax=<%= priceMax || '' %>&brands=<%= brands ? brands.join(',') : '' %>" class="pagination-btn"><%= i %></a>
                        <% } %>
                    <% } %>
                    
                    <% if (currentPage < totalPages) { %>
                        <a href="?page=<%= currentPage + 1 %>&q=<%= q || '' %>&category=<%= category || '' %>&sort=<%= sort || '' %>&priceMin=<%= priceMin || '' %>&priceMax=<%= priceMax || '' %>&brands=<%= brands ? brands.join(',') : '' %>" class="pagination-btn">Next</a>
                    <% } %>
                </div>
            <% } %>
        </main>
    </div>

    <script>
        // Search functionality
        document.querySelector('.search-box').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                const searchValue = this.value;
                const url = new URL(window.location);
                url.searchParams.set('q', searchValue);
                url.searchParams.set('page', '1');
                window.location.href = url.toString();
            }
        });

        // Brand filter functionality
        document.addEventListener('DOMContentLoaded', function() {
            const brandCheckboxes = document.querySelectorAll('input[name="brandFilter"]');
            const selectedBrandsInput = document.getElementById('selectedBrands');
            const filterForm = document.getElementById('filterForm');

            // Update hidden input when checkboxes change
            function updateSelectedBrands() {
                const selectedBrands = [];
                brandCheckboxes.forEach(checkbox => {
                    if (checkbox.checked) {
                        selectedBrands.push(checkbox.value);
                    }
                });
                selectedBrandsInput.value = selectedBrands.join(',');
                
                // Update selected brand count display
                const countElement = document.getElementById('selectedBrandCount');
                if (selectedBrands.length > 0) {
                    countElement.textContent = `(${selectedBrands.length})`;
                    countElement.style.display = 'inline';
                } else {
                    countElement.style.display = 'none';
                }
                
                updateActiveFiltersCount();
                console.log('Selected brands:', selectedBrands);
            }

            // Count and display active filters
            function updateActiveFiltersCount() {
                let activeCount = 0;
                
                // Count search
                if (document.querySelector('input[name="q"]').value.trim()) activeCount++;
                
                // Count category
                if (document.querySelector('select[name="category"]').value) activeCount++;
                
                // Count price range
                if (document.querySelector('input[name="priceMin"]').value || 
                    document.querySelector('input[name="priceMax"]').value) activeCount++;
                
                // Count selected brands
                const selectedBrands = Array.from(brandCheckboxes).filter(cb => cb.checked);
                if (selectedBrands.length > 0) activeCount++;
                
                const countElement = document.getElementById('activeFiltersCount');
                if (activeCount > 0) {
                    countElement.textContent = activeCount;
                    countElement.style.display = 'inline';
                } else {
                    countElement.style.display = 'none';
                }
            }

            // Add event listeners to brand checkboxes
            brandCheckboxes.forEach(checkbox => {
                checkbox.addEventListener('change', function() {
                    updateSelectedBrands();
                    // Auto-submit form when brand selection changes
                    setTimeout(() => {
                        filterForm.submit();
                    }, 100);
                });
            });

            // Initialize selected brands on page load
            updateSelectedBrands();
            
            // Add event listeners to other filter inputs for count updates
            document.querySelector('input[name="q"]').addEventListener('input', updateActiveFiltersCount);
            document.querySelector('select[name="category"]').addEventListener('change', updateActiveFiltersCount);
            document.querySelector('input[name="priceMin"]').addEventListener('input', updateActiveFiltersCount);
            document.querySelector('input[name="priceMax"]').addEventListener('input', updateActiveFiltersCount);

            // Clear filters functionality
            document.getElementById('clearFilters').addEventListener('click', function() {
                // Clear all form inputs
                document.querySelector('input[name="q"]').value = '';
                document.querySelector('select[name="category"]').value = '';
                document.querySelector('input[name="priceMin"]').value = '';
                document.querySelector('input[name="priceMax"]').value = '';
                document.querySelector('select[name="sort"]').value = 'newest';
                
                // Uncheck all brand checkboxes
                brandCheckboxes.forEach(checkbox => {
                    checkbox.checked = false;
                });
                
                // Update hidden input and submit
                updateSelectedBrands();
                
                // Redirect to clean URL
                window.location.href = '/user/product/list';
            });
        });
    </script>
</body>
</html>