<body>
    <div class="page-title"></div>
    
    <div class="login-container">
        <!-- Left side with image -->
        <div class="login-image">
            <a href="#" class="logo-left">Melodia</a>
            <div class="image-container">
                <img src="/image/user/login/login-page.png" alt="Person with headphones" onerror="this.src='data:image/svg+xml;base64,'; this.style.backgroundColor='#f3f4f6';">
            </div>
        </div>

        <!-- Right side with form -->
        <div class="login-form-container">
            <div class="welcome-text">Welcome to Melodia</div>
            
            <div class="tab-container">
                <button class="tab-button active" type="button">Login</button>
                <button class="tab-button" type="button" onclick="window.location.href='/signUp'">Register</button>
            </div>

            <!-- Error and Success Messages -->
            <% if (typeof error !== 'undefined' && error) { %>
                <% if (typeof isBlocked !== 'undefined' && isBlocked) { %>
                    <!-- Special blocked user message -->
                    <div class="blocked-user-message">
                        <div class="blocked-icon">üö´</div>
                        <div class="blocked-content">
                            <h4>Account Blocked</h4>
                            <p>Your account has been temporarily blocked by the administrator.</p>
                            <div class="blocked-actions">
                                <p>Need help? Contact our support team:</p>
                                <a href="mailto:<%= typeof supportEmail !== 'undefined' ? supportEmail : 'support@melodia.com' %>" class="support-link">
                                    <%= typeof supportEmail !== 'undefined' ? supportEmail : 'support@melodia.com' %>
                                </a>
                                <button type="button" class="try-different-account" onclick="clearFormAndTryAgain()">
                                    Try Different Account
                                </button>
                            </div>
                        </div>
                    </div>
                <% } else { %>
                    <div class="error-message">
                        <% if (error.includes('Invalid') || error.includes('invalid')) { %>
                            Invalid email or password. Please try again.
                        <% } else if (error.includes('blocked') || error.includes('Blocked')) { %>
                            Your account has been blocked. Please contact support.
                        <% } else if (error.includes('not found') || error.includes('Not found')) { %>
                            Account not found. Please check your credentials.
                        <% } else { %>
                            <%= error %>
                        <% } %>
                    </div>
                <% } %>
            <% } %>

            <% if (typeof success !== 'undefined' && success) { %>
                <div class="success-message">
                    <%= success %>
                </div>
            <% } %>

            <!-- Handle URL query errors -->
            <% if (typeof query !== 'undefined' && query.error) { %>
                <% if (query.error === 'account_blocked') { %>
                    <!-- Special blocked user message for URL parameter -->
                    <div class="blocked-user-message">
                        <div class="blocked-icon"></div>
                        <div class="blocked-content">
                            <h4>Account Blocked</h4>
                            <% if (query.email) { %>
                                <!-- <p>The account <strong><%= query.email %></strong> has been blocked by the administrator.</p> -->
                            <!-- <% } else { %> -->
                                <p>Your account has been blocked by the administrator.</p>
                            <% } %>
                            <!-- <div class="blocked-actions">
                                <p>Need help? Contact our support team:</p>
                                <a href="mailto:support@melodia.com" class="support-link">
                                    support@melodia.com
                                </a>
                                <button type="button" class="try-different-account" onclick="clearFormAndTryAgain()">
                                    Try Different Account
                                </button>
                            </div> -->
                        </div>
                    </div>
                <% } else { %>
                    <div class="error-message">
                        <% if (query.error === 'oauth_failed') { %>
                            Google authentication failed. Please try again.
                        <% } else if (query.error === 'auth_failed') { %>
                            Authentication failed. Please try again.
                        <% } else if (query.error === 'session_error') { %>
                            Session error occurred. Please try logging in again.
                        <% } else if (query.error === 'invalid_credentials') { %>
                            Invalid email or password. Please try again.
                        <% } else { %>
                            An error occurred during authentication.
                        <% } %>
                    </div>
                <% } %>
            <% } %>

            <form action="/login" method="POST" class="login-form" id="loginForm">
                <div class="form-group">
                    <label for="email" class="form-label">Email Address</label>
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        class="form-input" 
                        placeholder="Enter your Email Address"
                        value="<%= typeof email !== 'undefined' ? email : '' %>"
                        required
                    >
                </div>

                <div class="form-group">
                    <label for="password" class="form-label">Password</label>
                    <div class="password-container">
                        <input 
                            type="password" 
                            id="password" 
                            name="password" 
                            class="form-input" 
                            placeholder="Enter your Password"
                            required
                        >
                        <button type="button" class="password-toggle" onclick="togglePassword()">üëÅ</button>
                    </div>
                </div>

                <div class="form-options">
                   
                    <a href="/forgot-password" class="forgot-password">Forgot Password?</a>
                </div>

                <button type="submit" class="login-button">Login</button>
            </form>

            <div class="divider">
                <span>OR</span>
            </div>

            <div class="social-buttons">
                <button type="button" class="social-button google-btn" onclick="loginWithGoogle()">
                    <img src="/image/user/login/icons8-google-48.png" alt="google-logo" style="width: 30px; padding-right: 10px;">
                    Sign Up with Google
                </button>
            </div>
        </div>
    </div>

    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const toggleBtn = document.querySelector('.password-toggle');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleBtn.textContent = 'üôà';
            } else {
                passwordInput.type = 'password';
                toggleBtn.textContent = 'üëÅ';
            }
        }

        // Social login functions
        function loginWithGoogle() {
            window.location.href = '/auth/google';
        }

        // Enhanced form validation with better error display
        document.getElementById('loginForm').addEventListener('submit', function(e) {
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            
            // Clear previous states
            document.querySelectorAll('.form-input').forEach(input => {
                input.classList.remove('field-error', 'success', 'shake');
            });
            
            // Remove existing field error messages
            document.querySelectorAll('.field-error-message').forEach(msg => msg.remove());
            
            let hasErrors = false;
            
            if (!email) {
                showFieldError('email', 'Email is required');
                hasErrors = true;
            } else if (!isValidEmail(email)) {
                showFieldError('email', 'Please enter a valid email');
                hasErrors = true;
            } else {
                document.getElementById('email').classList.add('success');
            }
            
            if (!password) {
                showFieldError('password', 'Password is required');
                hasErrors = true;
            } else if (password.length < 6) {
                showFieldError('password', 'Password must be at least 6 characters');
                hasErrors = true;
            } else {
                document.getElementById('password').classList.add('success');
            }
            
            if (hasErrors) {
                e.preventDefault();
                return;
            }

            // Show loading state
            const loginBtn = this.querySelector('.login-button');
            const originalText = loginBtn.innerHTML;
            loginBtn.innerHTML = '<div class="loading-spinner"></div> Signing in...';
            loginBtn.disabled = true;
        });

        function showFieldError(fieldId, message) {
            const field = document.getElementById(fieldId);
            field.classList.add('field-error', 'shake');
            
            const errorDiv = document.createElement('div');
            errorDiv.className = 'field-error-message';
            errorDiv.textContent = message;
            field.parentNode.appendChild(errorDiv);
        }

        function isValidEmail(email) {
            return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
        }

        // Remove shake class after animation
        document.addEventListener('animationend', function(e) {
            if (e.animationName === 'shake') {
                e.target.classList.remove('shake');
            }
        });

        // Clear form and hide blocked message
        function clearFormAndTryAgain() {
            // Clear form fields
            document.getElementById('email').value = '';
            document.getElementById('password').value = '';
            
            // Remove error states
            document.querySelectorAll('.form-input').forEach(input => {
                input.classList.remove('field-error', 'success', 'shake');
            });
            
            // Remove field error messages
            document.querySelectorAll('.field-error-message').forEach(msg => msg.remove());
            
            // Hide blocked message
            // const blockedMessage = document.querySelector('.blocked-user-message');
            // if (blockedMessage) {
            //     blockedMessage.style.animation = 'slideOutError 0.4s ease-out forwards';
            //     setTimeout(() => blockedMessage.remove(), 400);
            // }
            
            // Focus on email field
            document.getElementById('email').focus();
        }

        // Auto-hide success/error messages after 5 seconds
        document.addEventListener('DOMContentLoaded', function() {
            const messages = document.querySelectorAll('.error-message, .success-message');
            messages.forEach(message => {
                setTimeout(() => {
                    message.style.animation = 'slideOutError 0.4s ease-out forwards';
                    setTimeout(() => message.remove(), 400);
                }, 5000);
            });
            
            // Don't auto-hide blocked user messages as they're more important
            // const blockedMessages = document.querySelectorAll('.blocked-user-message');
            // Blocked messages stay visible until user manually dismisses them
        });
    </script>
